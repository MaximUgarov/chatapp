{
    "root": true,
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2022,
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking"
    ],
    "rules": {
  
      "@typescript-eslint/adjacent-overload-signatures": "error",           // https://typescript-eslint.io/rules/adjacent-overload-signatures/
      "@typescript-eslint/array-type": [ "error", {                         // https://typescript-eslint.io/rules/array-type/
        "default": "generic" 
      }],
      "@typescript-eslint/await-thenable": "error",                         // https://typescript-eslint.io/rules/await-thenable/
      "@typescript-eslint/ban-tslint-comment": "warn",                      // https://typescript-eslint.io/rules/ban-tslint-comment/
      "@typescript-eslint/ban-ts-comment": [ "error", {                     // https://typescript-eslint.io/rules/ban-ts-comment/
        "ts-expect-error": "allow-with-description",
        "ts-ignore": true,
        "ts-nocheck": true,
        "ts-check": false
      }],
      "@typescript-eslint/consistent-generic-constructors": [               // https://typescript-eslint.io/rules/consistent-generic-constructors
        "error",
        "constructor"
      ],
      "@typescript-eslint/consistent-indexed-object-style": [               // https://typescript-eslint.io/rules/consistent-indexed-object-style
        "error",
        "record"
      ],
      "@typescript-eslint/consistent-type-imports": [ "error", { 
        "prefer": "type-imports" 
      }],
      "@typescript-eslint/consistent-type-exports": [ "error", {            // https://typescript-eslint.io/rules/consistent-type-exports
        "fixMixedExportsWithInlineTypeSpecifier": true
      }],
      "default-param-last": "off",
      "@typescript-eslint/default-param-last": [ "error" ],                 // https://typescript-eslint.io/rules/default-param-last
      "@typescript-eslint/member-delimiter-style": [ "error", {             // https://typescript-eslint.io/rules/member-delimiter-style/
        "multiline": {
          "delimiter": "comma",
          "requireLast": true
        },
        "singleline": {
          "delimiter": "comma",
          "requireLast": true
        },
        "multilineDetection": "brackets"
      }],
      "@typescript-eslint/method-signature-style": [ "error", "property" ],   // https://typescript-eslint.io/rules/method-signature-style/
      "no-array-constructor": "off",
      "@typescript-eslint/no-array-constructor": [ "error" ],                 // https://typescript-eslint.io/rules/no-array-constructor/
      "@typescript-eslint/no-confusing-non-null-assertion": "error",          // https://typescript-eslint.io/rules/no-confusing-non-null-assertion
      "@typescript-eslint/no-confusing-void-expression": [                    // https://typescript-eslint.io/rules/no-confusing-void-expression
        "error",
        { "ignoreArrowShorthand": true }
      ],
      "no-dupe-class-members": "off",
      "@typescript-eslint/no-dupe-class-members": [ "error" ],                // https://typescript-eslint.io/rules/no-dupe-class-members
      "@typescript-eslint/no-duplicate-enum-values": "error",                 // https://typescript-eslint.io/rules/no-duplicate-enum-values
      "@typescript-eslint/no-dynamic-delete": "error",                        // https://typescript-eslint.io/rules/no-dynamic-delete
      "no-empty-function": "off",                                             
      "@typescript-eslint/no-empty-function": [ "error" ],                    // https://typescript-eslint.io/rules/no-empty-function
      "@typescript-eslint/no-empty-interface": [ "error" ],                   // https://typescript-eslint.io/rules/no-empty-interface
      "@typescript-eslint/no-explicit-any": [ "error" ],                      // https://typescript-eslint.io/rules/no-explicit-any/
      "@typescript-eslint/no-extra-non-null-assertion": [ "error" ],          // https://typescript-eslint.io/rules/no-extra-non-null-assertion
      "no-extra-parens": "off",
      "@typescript-eslint/no-extra-parens": [ "error" ],                      // https://typescript-eslint.io/rules/no-extra-parens
      "no-extra-semi": "off",
      "@typescript-eslint/no-extra-semi": [ "error" ],                        // https://typescript-eslint.io/rules/no-extra-semi
      "@typescript-eslint/no-for-in-array": [ "error" ],                      // https://typescript-eslint.io/rules/no-for-in-array/
      "no-implied-eval": "off",
      "@typescript-eslint/no-implied-eval": ["error"],                        // https://typescript-eslint.io/rules/no-implied-eval
      "@typescript-eslint/no-inferrable-types": ["error"],                    // https://typescript-eslint.io/rules/no-inferrable-types
      "no-invalid-this": "off",
      "@typescript-eslint/no-invalid-this": ["error"],                        // https://typescript-eslint.io/rules/no-invalid-this
      "no-loop-func": "off",
      "@typescript-eslint/no-loop-func": ["error"],                           // https://typescript-eslint.io/rules/no-loop-func/
      "no-loss-of-precision": "off",
      "@typescript-eslint/no-loss-of-precision": ["error"],                   // https://typescript-eslint.io/rules/no-loss-of-precision
      "@typescript-eslint/no-meaningless-void-operator": [ "error", {         // https://typescript-eslint.io/rules/no-meaningless-void-operator
        "checkNever": false
      }],
      "@typescript-eslint/no-misused-new": "error",                           // https://typescript-eslint.io/rules/no-misused-new
      
      
      
      "@typescript-eslint/no-unnecessary-type-assertion": "off",
      "@typescript-eslint/no-namespace": "off",
      "@typescript-eslint/triple-slash-reference": "off",
  
  
  
  
      // "no-magic-numbers": "error",                                              // https://runebook.dev/ru/docs/eslint/rules/no-magic-numbers
  
      "eqeqeq": [ "error", "always" ],                                          // https://runebook.dev/ru/docs/eslint/rules/eqeqeq
      "quotes": [ "error", "double" ],                                          // https://runebook.dev/ru/docs/eslint/rules/quotes
      "semi": [ "error", "always" ],                                            // https://runebook.dev/ru/docs/eslint/rules/semi
      "space-in-parens": [ "error", "never" ],                                  // https://runebook.dev/ru/docs/eslint/rules/space-in-parens
      "accessor-pairs": "error",                                                // https://runebook.dev/ru/docs/eslint/rules/accessor-pairs
      "linebreak-style": [ "error", "unix" ],                                   // https://runebook.dev/ru/docs/eslint/rules/linebreak-style
      "no-lonely-if": [ "error" ],                                              // https://runebook.dev/ru/docs/eslint/rules/no-lonely-if
      "no-trailing-spaces": [ "error" ],                                        // https://runebook.dev/ru/docs/eslint/rules/no-trailing-spaces
      "no-unneeded-ternary": [ "error" ],                                       // https://runebook.dev/ru/docs/eslint/rules/no-unneeded-ternary
      "no-whitespace-before-property": [ "error" ],                             // https://runebook.dev/ru/docs/eslint/rules/no-whitespace-before-property
      "no-bitwise": [ "error" ],                                                // https://runebook.dev/ru/docs/eslint/rules/no-bitwise
      "no-dupe-keys": "error",                                                  // https://runebook.dev/ru/docs/eslint/rules/no-dupe-keys
      "array-callback-return": "error",                                         // https://runebook.dev/ru/docs/eslint/rules/array-callback-return
      "brace-style": [ "error", "1tbs", { "allowSingleLine": false } ],         // https://runebook.dev/ru/docs/eslint/rules/brace-style
      "arrow-parens": [ "error", "always" ],                                    // https://runebook.dev/ru/docs/eslint/rules/arrow-parens
      "arrow-body-style": [ "error", "as-needed" ],                             // https://runebook.dev/ru/docs/eslint/rules/arrow-body-style
      "arrow-spacing": [ "error" ],                                             // https://runebook.dev/ru/docs/eslint/rules/arrow-spacing
      "func-style": [ "error", "declaration", { "allowArrowFunctions": true }], // https://runebook.dev/ru/docs/eslint/rules/func-style
      "new-cap": "error",                                                       // https://runebook.dev/ru/docs/eslint/rules/new-cap
  
  
      "no-alert": "error",                                                      // https://runebook.dev/ru/docs/eslint/rules/no-alert
      "no-await-in-loop": "error",                                              // https://runebook.dev/ru/docs/eslint/rules/no-await-in-loop
      "no-caller": "error",                                                     // https://runebook.dev/ru/docs/eslint/rules/no-caller
      "no-case-declarations": "error",                                          // https://runebook.dev/ru/docs/eslint/rules/no-case-declarations
      "no-div-regex": "error",                                                  // https://runebook.dev/ru/docs/eslint/rules/no-div-regex
      "no-else-return": "error",                                                // https://runebook.dev/ru/docs/eslint/rules/no-else-return
      "no-eval": "error",                                                       // https://runebook.dev/ru/docs/eslint/rules/no-eval
      "no-ex-assign": "error",                                                  // https://runebook.dev/ru/docs/eslint/rules/no-ex-assign
      "no-extend-native": "error",                                              // https://runebook.dev/ru/docs/eslint/rules/no-extend-native
      "no-extra-bind": "error",                                                 // https://runebook.dev/ru/docs/eslint/rules/no-extra-bind
      "no-extra-label": "error",                                                // https://runebook.dev/ru/docs/eslint/rules/no-extra-label
      "no-fallthrough": "error",                                                // https://runebook.dev/ru/docs/eslint/rules/no-fallthrough
      "no-floating-decimal": "error",                                           // https://runebook.dev/ru/docs/eslint/rules/no-floating-decimal
      "no-implicit-coercion": "error",                                          // https://runebook.dev/ru/docs/eslint/rules/no-implicit-coercion
      "no-label-var": "error",                                                  // https://runebook.dev/ru/docs/eslint/rules/no-label-var
      "no-lone-blocks": "error",                                                // https://runebook.dev/ru/docs/eslint/rules/no-lone-blocks
      "no-multi-assign": "error",                                               // https://runebook.dev/ru/docs/eslint/rules/no-multi-assign
      "no-multi-spaces": "error",                                               // https://runebook.dev/ru/docs/eslint/rules/no-multi-spaces
      "no-multi-str": "error",                                                  // https://runebook.dev/ru/docs/eslint/rules/no-multi-str
      "no-native-reassign": "error",                                            // https://runebook.dev/ru/docs/eslint/rules/no-native-reassign
      "no-negated-condition": "error",                                          // https://runebook.dev/ru/docs/eslint/rules/no-negated-condition
      "no-new": "error",                                                        // https://runebook.dev/ru/docs/eslint/rules/no-new
      "no-void": "error",                                                       // https://runebook.dev/ru/docs/eslint/rules/no-void
      "no-new-func": "error",                                                   // https://runebook.dev/ru/docs/eslint/rules/no-new-func
      "no-new-object": "error",                                                 // https://runebook.dev/ru/docs/eslint/rules/no-new-object
      "no-new-wrappers": "error",                                               // https://runebook.dev/ru/docs/eslint/rules/no-new-wrappers
      "no-octal-escape": "error",                                               // https://runebook.dev/ru/docs/eslint/rules/no-octal-escape
      "no-param-reassign": "error",                                             // https://runebook.dev/ru/docs/eslint/rules/no-param-reassign
      "no-path-concat": "error",                                                // https://runebook.dev/ru/docs/eslint/rules/no-path-concat
      "no-var": "error",                                                        // https://runebook.dev/ru/docs/eslint/rules/no-var
      "no-console": "error",                                                    // https://runebook.dev/ru/docs/eslint/rules/no-console
      "no-proto": "error",                                                      // https://runebook.dev/ru/docs/eslint/rules/no-proto
      "vars-on-top": "error",                                                   // https://runebook.dev/ru/docs/eslint/rules/vars-on-top
      "require-await": "error",                                                 // https://runebook.dev/ru/docs/eslint/rules/require-await
      "prefer-template": "error",                                               // https://runebook.dev/ru/docs/eslint/rules/prefer-template
      "prefer-spread": "error",                                                 // https://runebook.dev/ru/docs/eslint/rules/prefer-spread
      "prefer-numeric-literals": "error",                                       // https://runebook.dev/ru/docs/eslint/rules/prefer-numeric-literals
      "prefer-const": "error",                                                  // https://runebook.dev/ru/docs/eslint/rules/prefer-const
      "prefer-arrow-callback": "error",                                         // https://runebook.dev/ru/docs/eslint/rules/prefer-arrow-callback
      "operator-linebreak": [ "error", "after" ],                               // https://runebook.dev/ru/docs/eslint/rules/operator-linebreak
      "no-useless-return": "error",                                             // https://runebook.dev/ru/docs/eslint/rules/no-useless-return
      "no-useless-concat": "error",                                             // https://runebook.dev/ru/docs/eslint/rules/no-useless-concat
      "no-use-before-define": [ "error", { "functions": false }],               // https://runebook.dev/ru/docs/eslint/rules/no-use-before-define
      "no-useless-call": "error",                                               // https://runebook.dev/ru/docs/eslint/rules/no-useless-call
      "no-useless-constructor": "error",                                        // https://runebook.dev/ru/docs/eslint/rules/no-useless-constructor
      "object-curly-spacing": [ "error", "always" ],                            // https://runebook.dev/ru/docs/eslint/rules/object-curly-spacing
      "operator-assignment": [ "error", "always" ],                             // https://runebook.dev/ru/docs/eslint/rules/operator-assignment
      "object-shorthand": [ "error", "always" ],                                // https://runebook.dev/ru/docs/eslint/rules/object-shorthand
      "template-curly-spacing": [ "error", "never" ],                           // https://runebook.dev/ru/docs/eslint/rules/template-curly-spacing
      "rest-spread-spacing": [ "error", "never" ],                              // https://runebook.dev/ru/docs/eslint/rules/rest-spread-spacing
      "prefer-rest-params": [ "error" ],                                        // https://runebook.dev/ru/docs/eslint/rules/prefer-rest-params
      "no-useless-computed-key": [ "error" ],                                   // https://runebook.dev/ru/docs/eslint/rules/no-useless-computed-key
      "space-before-blocks": [ "error", "always" ],                             // https://runebook.dev/ru/docs/eslint/rules/space-before-blocks
      "space-infix-ops": [ "error" ],                                           // https://runebook.dev/ru/docs/eslint/rules/space-infix-ops
      "no-useless-escape": [ "error" ],                                         // https://runebook.dev/ru/docs/eslint/rules/space-unary-ops
      "max-lines": [ "error", {                                                  // https://runebook.dev/ru/docs/eslint/rules/max-lines
        "max": 300, 
        "skipBlankLines": true, 
        "skipComments": true
      }],
      "no-multiple-empty-lines": [ "error", {
        "max": 3,
        "maxEOF": 0,
        "maxBOF": 0
      }],
      "max-len": [ "error", { "code": 150, "ignoreUrls": true } ],              // https://runebook.dev/ru/docs/eslint/rules/max-len
      "semi-spacing": [ "error", {                                              // https://runebook.dev/ru/docs/eslint/rules/semi-spacing
        "before": false,
        "after": true
      }],
      "space-before-function-paren": [ "error", {                               // https://runebook.dev/ru/docs/eslint/rules/space-before-function-paren
        "anonymous": "never",
        "named": "never",
        "asyncArrow": "always"
      }],
      "space-unary-ops": [ "error", {                                           // https://runebook.dev/ru/docs/eslint/rules/space-unary-ops
        "words": true,
        "nonwords": false,
        "overrides": {
          "typeof": false
        }
      }]
    }
  }